{
  "name": "lego-js",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:local": "dotenvx run -f .env.dev -f .env.local --ignore=MISSING_ENV_FILE -- next dev --port 3000",
    "dev": "dotenvx run -f .env.dev -f .env.local --ignore=MISSING_ENV_FILE -- next dev --port 3000",
    "build": "dotenvx run -f .env.prod -f .env.prod.local --ignore=MISSING_ENV_FILE -- next build",
    "start": "dotenvx run -f .env.prod --ignore=MISSING_ENV_FILE -- next start",
    "deploy": "pnpm dlx vercel@latest deploy --prod",
    "deploy:dotenvx": "pnpm dlx vercel@latest env add DOTENV_PRIVATE_KEY_PRODUCTION",
    "lint": "eslint",
    "pretty": "prettier --write .",
    "clean": "rimraf node_modules .next dist",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "dotenvx run -- drizzle-kit migrate"
  },
  "dependencies": {
    "@brakbricks/rebrickable-api": "^0.5.0",
    "@dotenvx/dotenvx": "^1.51.2",
    "better-auth": "^1.4.7",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.41.0",
    "next": "16.1.0",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.7",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
